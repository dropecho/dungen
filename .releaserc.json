{
  "branches": [
    "main"
  ],
  "tagFormat": "${version}",
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "angular",
        "parserOpts": {
          "noteKeywords": [
            "BREAKING CHANGE",
            "BREAKING CHANGES",
            "BREAKING"
          ]
        }
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "angular",
        "parserOpts": {
          "noteKeywords": [
            "BREAKING CHANGE",
            "BREAKING CHANGES",
            "BREAKING"
          ]
        },
        "writerOpts": {
          "commitsSort": [
            "subject",
            "scope"
          ]
        }
      }
    ],
    "@semantic-release/changelog",
    "@semantic-release/npm",
    [
      "semantic-release-haxelib",
      {
        "haxelibPublish": true,
        "additionalFiles": []
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "dist/cs/dropecho.langgen/bin/dropecho.dungen.dll",
            "name": "dropecho.dungen-${nextRelease.gitTag}.dll",
            "label": "C# DLL"
          }
        ]
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "*.md",
          "package.json",
          "haxelib.json"
        ]
      }
    ]
  ],
  "preset": "angular"
}
